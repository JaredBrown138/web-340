<% include header %>
    <body>
        <% include navbar %>
            <div role="main" class="container" style="width: 50%; margin: auto; height: 700px; margin-top: 100px;">
                <h2>-- Employee Record Search Results --</h2>
                <div>
                    <div class="form-group">
                        <label for="lastName">Search Query (last name):</label>
                        <input type="text" class="form-control" id="txtName" value="<%= employee[0].lastName %>" name="lastName" />
                    </div>
                    <table class="table table‐hover">
                        <thead class="thead‐dark">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%employee.forEach(function(entry){%>
                                <tr>
                                    <td>
                                        <%=entry.firstName%>
                                    </td>
                                    <td>
                                        <%=entry.lastName%>
                                    </td>
                                </tr>
                        </tbody>
                        <%})%>
                    </table>
                </div>
                <a href="/list">Return to Employee Listing</a>
                    
            </div>
            <% include scripts %>
            <% include footer %>
    </body>