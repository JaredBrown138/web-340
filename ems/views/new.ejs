<% include header %>
    <body>
        <% include navbar %>
            <div role="main" class="container" style="width: 50%; margin: auto; height: 700px; margin-top: 100px;">

                <h2>Employee Entry Page</h2>
                <form method="post" action="/process">
                    <div class="form-group">
                        <label for="txtFirstName">First Name:</label>
                        <input type="text" class="form-control" id="txtFirstName" name="txtFirstName" />
                    </div>
                    <div class="form-group">
                            <label for="txtLastName">Last Name:</label>
                            <input type="text" class="form-control" id="txtLastName" name="txtLastName" />
                    </div>

                    <div class="form-group">
                        <!-- CSRF token -->
                        <input name="_csrf" value="<%= csrfToken %>" type="hidden">

                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                    </div>
                </form>

                <br />
                <br />

                <a href="/list">Return to Employee Listing</a>
            </div>
            <% include scripts %>
            <% include footer %>
    </body>